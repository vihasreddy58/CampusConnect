                        <h2
                            style="text-align: center; margin-top: 16px; margin-bottom: 16px; font-size: 35px; color: #333; font-family: 'Arial, sans-serif'; font-weight: bold; text-transform: uppercase;">
                            Announcements <i class="fa fa-bullhorn" aria-hidden="true"></i> </h2>

                        <div class="contain">
                            <div class="rowbar">
                                <div class="col">
                                    <div class="highlights-bar">
                                        <div class="highlight-text">
                                            <% if (announcedetails.length> 0) { %>
                                                <% announcedetails.forEach((announce, index)=> { %>
                                                    <span class="announcement-item">
                                                        &CircleDot; <strong>
                                                            <%= announce.username %>
                                                        </strong><b>:</b>
                                                        <%= announce.announcement %>
                                                            <i class="fa fa-separator" aria-hidden="true"></i>
                                                    </span>
                                                    <% }); %>
                                                        <% } %>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>


